	\begin{algorithm}[ht]
%\captionsetup[algorithm]{name=Algoritmo}
		\caption{Epsilon de m√°quina}
		\begin{algorithmic}[1]
			\For{k}{1}{100}
			\State $s \gets  0.5*s$
			\State $t \gets s+1.0$
			\If{ $t \leq 1.0$ }		
			\State $s \gets 2.0*s$
			\State Escribir $k-1$, $s$
			\State Salir
			\EndIf
			\EndFor
		\end{algorithmic}
	\end{algorithm}
